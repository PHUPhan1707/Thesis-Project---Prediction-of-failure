    "ml_feature_mapping": {
        "high_priority_features": [
            {
                "api_field": "problem_improvement_rate",
                "ml_feature": "learning_trajectory",
                "importance": "HIGH",
                "why": "Positive = learning, Negative = struggling"
            },
            {
                "api_field": "activity_consistency",
                "ml_feature": "study_habit_quality",
                "importance": "HIGH",
                "why": "Low consistency = irregular study = dropout risk"
            },
            {
                "api_field": "velocity_trend",
                "ml_feature": "momentum_indicator",
                "importance": "HIGH",
                "why": "Declining = early warning sign"
            },
            {
                "api_field": "avg_attempts_to_pass",
                "ml_feature": "difficulty_indicator",
                "importance": "MEDIUM",
                "why": ">3 attempts = struggling with material"
            },
            {
                "api_field": "late_night_ratio",
                "ml_feature": "stress_indicator",
                "importance": "MEDIUM",
                "why": "High ratio = cramming, poor time management"
            }
        ]
    },
